<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>


<% @messages.each do |message| %>

	<div>
		<h3><%= message.name %> signed the guestbook <%= time_ago_in_words(message.created_at) %> ago:</h3>
		<%= message.body %><br><br>
	</div>

<% end %>

<%= link_to "Sign Again!", new_message_path %>
